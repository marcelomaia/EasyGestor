    <separator/>
    <menuitem action="PrintReceipt"/>
  </popup>
  <toolbar action="toolbar">
    <separator/>
    <toolitem action="Pay"/>
    <toolitem action="Edit"/>
    <toolitem action="Details"/>
  </toolbar>
